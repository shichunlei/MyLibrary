<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/tool_bar" />

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:padding="30dp">

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/heart" />

                <Button
                    android:id="@+id/button"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="50dp"
                    android:text="h"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/text"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="50dp"
                    android:gravity="center"
                    android:text="hanks"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <chingtech.library.widget.ThreeStateSwitch
                    android:id="@+id/threeState"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="30dp"
                    app:text_left="کم"
                    app:text_normal_size="16sp"
                    app:text_right="زیاد"
                    app:text_selected_size="20sp" />

                <chingtech.library.widget.ThreeStateSwitch
                    android:id="@+id/threeState1"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="30dp"
                    app:text_left="کم"
                    app:text_normal_size="16sp"
                    app:text_right="زیاد"
                    app:text_selected_color="#0037ec"
                    app:text_selected_size="20sp" />

                <chingtech.library.widget.ThreeStateSwitch
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="30dp" />

                <chingtech.library.widget.ThreeStateSwitch
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="30dp"
                    app:background_normal_color="#3b6bfc"
                    app:background_selected_color="#ff3f3f" />

            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>
