<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    android:layout_marginTop="2dp"
    android:orientation="vertical"
    tools:context=".view.QuestionActivity"
    tools:showIn="@layout/fragment_question">

    <LinearLayout
        android:id="@+id/layout_item"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/recycler_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        tools:background="@color/bar_grey_90">

        <TextView
            android:id="@+id/check_question_option"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/checkbox_qq_style"
            android:gravity="center"
            android:textColor="@color/google_blue"
            android:textSize="25sp"
            tools:text="A" />

        <TextView
            android:id="@+id/tv_question_option"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="20dp"
            android:textSize="20sp"
            tools:text="67å²" />
    </LinearLayout>
</LinearLayout>